{% extends 'simpleTemplate.html.twig' %}
{% block events %}
    <a href="/" class="nav-link">Retour à l'accueil</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="/events/new" class="nav-link">Ajouter un évenement</a> {% endif %}
    <div class="section-header">
        <h2>Evenements</h2>
    </div>

    {% if events %}
    {% for event in events %}
        <div class="col-lg-4 col-md-6">
            <div style="padding: 8px"class="hotel">
                <h5><b>{{ event.titre }}</b></h5>
                <p>{{ event.description }}</p>
                <div class="col-lg-12">
                    <p><b>Début</b>{{ event.dateDebut |date('d-m-Y')  }}</p>
                    <p><b> Fin:</b> {{ event.dateFin |date('d-m-Y') }}</p></div>
                        <p>{{ event.lieu }}</p>
                <div class="stars">
                    <a href="/event/{{ event.id }}/details"  style="color: white" class="btn btn-dark">+Détails</a>
                    {% if is_granted('ROLE_ADMIN') %}

                    <a href="/event/edit/{{ event.id }}" class="btn btn-light">Modifier</a>
                    <a href="/event/delete/{{ event.id }}" style="color: white" class="btn btn-danger delete-event" onclick="return confirm('Voulez-vous continuer?')">Supprimer</a>
{% endif %}
                </div>

            </div>
        </div>




    {%  endfor %}
{% else %}

{% endif %}
{% endblock %}