{% extends 'base.html.twig' %}

{%  block title %} rhapsodytravels {% endblock %}

{%  block body %}{% block listEvents %}
    <a href="/events/list" class="nav-link">Afficher Tout</a>

    {% if events %}
        {% for event in events %}


            <div class="row schedule-item">
                <div class="col-md-2"><time>{{ event.dateDebut |date('d-m-Y') }} {{ event.dateFin|date('d-m-Y')  }}</time></div>
                <div class="col-md-10">
                    <h4>{{ event.titre }}</h4>
                    <p>Fugit voluptas iusto maiores temporibus autem numquam magnam.</p>
                </div>
            </div>
        {%  endfor %}
    {% else %}

    {% endif %}
{% endblock %}{% endblock %}

